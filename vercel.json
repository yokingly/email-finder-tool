{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/backend/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/email/(.*)",
      "dest": "apps/backend/src/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "apps/backend/src/index.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"]
}
